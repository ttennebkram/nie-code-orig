<table name="nie_url">

<field name="id"
	type="int"
	cgi_field_name="nie_url_id"
	is_not_null="TRUE"
	is_indexed="TRUE"
/>

<field name="type"
	type="int"
	is_not_null="TRUE"
	is_indexed="TRUE"
	description="WMS, redirect, ad, etc."
/>

<!-- how the user refers to this type -->
<field name="user_class"
	type="text"
	size="64"
	description="If it's custom data (an ad), what does the user call this class of data?"
/>

<field name="href_url"
	type="text"
	size="256"
	is_not_null="TRUE"
	is_indexed="TRUE"
	description="This is the URL that the user actually goes to, for text or graphic link"
/>
<field name="display_url"
	type="text"
	size="256"
	description="Show a shorter URL to the user, if we're even displaying it"
/>

<field name="title"
	type="text"
	size="256"
/>
<field name="hover_title"
	type="text"
	size="256"
/>
<field name="description"
	type="text"
	size="1024"
/>

<field name="do_show_text"
	type="boolean"
	description="Sometimes we just show a graphic, with no text"
/>

<field name="target"
	type="text"
	size="32"
/>

<field name="graphic_url"
	type="text"
	size="256"
/>
<field name="graphic_width"
	type="int"
/>
<field name="graphic_height"
	type="int"
/>

<field name="advertisement_code"
	type="text"
	size="64"
	description="Handy if this is an advertisement"
/>

<field name="created_date"
	type="timestamp"
/>
<field name="created_by_person"
	type="text"
	size="64"
/>
<field name="created_comment"
	type="text"
	size="1024"
/>

<field name="last_edit_date"
	type="timestamp"
/>
<field name="last_edit_by_person"
	type="text"
	size="64"
/>
<field name="last_edit_comment"
	type="text"
	size="1024"
/>

</table>
