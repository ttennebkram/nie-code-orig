	<!-- License -->
	<!-- ======= -->
	<section
		title="License Key"
		help="find_map_basic_info.html"
	>
		<field type="vertical_spacer" />
		<field
			type="vertical_spacer"
		>
			NIE Software License Key
		</field>
		<field type="vertical_spacer" />

		<field
			name="nie_lic_rev"
			type="read_only"
			label="Rev"
			xpath="/nie_config/license/@rev"
			default="1"
		/>
		<field
			name="nie_lic_company"
			label="Company"
			xpath="/nie_config/license/@company"
		/>
		<field
			name="nie_lic_start_date"
			label="Start date or blank (dd-mon-yyyy)"
			xpath="/nie_config/license/@start_date"
			_is_special="TRUE"
			default="01-jan-2000"
		/>
		<field
			name="nie_lic_end_date"
			label="End date (dd-mon-yyyy)"
			xpath="/nie_config/license/@end_date"
			_is_special="TRUE"
			default="31-dec-2000"
		/>

		<field
			name="nie_lic_server"
			label="To run on Server"
			xpath="/nie_config/license/@server"
		/>

		<field
			name="nie_lic_key"
			label="License Key (20 hex-digits)"
			xpath="/nie_config/license/@key"
			default="xxxx-xxxx-xxxx-xxxx-xxxx"
		/>

		<field type="vertical_spacer" />

		<field
			type="inline_button"
			click_event_class="VL"
		>
			Verify License
		</field>

	</section>


	<!-- Search Engine -->
	<!-- ============= -->
	<section
		title="Search Engine"
		help="find_map_or_create.html"
	>

		<field type="vertical_spacer" />
		<field
			type="vertical_spacer"
		>
			Existing Search Engine
		</field>

		<field type="vertical_spacer" />

		<!-- Step 1A -->
		<field
			type="vertical_spacer"
			font_size_increment="0"
		>
			Step 1.A:  Auto-Detect search engine Basic settings
		</field>
		<field
			name="search_form_url"
			label="Search form URL"
			default="http://"
			is_special="TRUE"
		/>

		<!--
		<field type="vertical_spacer" />
		-->

		<field
			type="inline_button"
			label="Fetch and analyze the search form"
			click_event_class="DetectSearchSettings"
		>
			Auto-Detect Search Settings
		</field>

		<!--
		<field type="vertical_spacer" />
		-->

		<!--
		<field
			type="inline_button"
			label="Clear settings below and try again"
			click_event_class="ClearAndDetectSearchSettings"
		>
			Clear and Try Again
		</field>
		-->

		<field type="vertical_spacer" />

		<!-- Step 1B -->
		<field
			type="vertical_spacer"
			font_size_increment="0"
		>
			Step 1.B:  Review and adjust Basic settings
		</field>
		<field
			name="search_url"
			label="Search Engine URL (w/ CGI and port)"
			default="http://"
			xpath="/nie_config/search_tuning/search_engine_info/search_url"
		/>

		<field
			name="search_method"
			label="Form Submit Method"
			type="select"
			default="GET"
			xpath="/nie_config/search_tuning/search_engine_info/search_url/@method"
		>
			<option>GET</option>
			<option>POST</option>
		</field>

		<field
			name="search_vendor"
			label="Search Engine Vendor"
			xpath="/nie_config/search_tuning/search_engine_info/vendor"
		/>

		<field
			name="search_field"
			label="Search Term Form Field"
			default="query"
			xpath="/nie_config/search_tuning/search_engine_info/search_term_field_name"
		/>

		<!--
		<field type="vertical_spacer" />
		<field
			type="vertical_spacer"
			font_size_increment="0"
		>
			Disable SearchTrack if a particular field is present
		</field>
		<field
			type="vertical_spacer"
			font_size_increment="0"
		>
			(Example: disable logging for pages 2 and on of search results)
		</field>
		<field
			name="take_no_action_field"
			label="No-Action indicator CGI field"
			xpath="/nie_config/search_tuning/search_engine_info/no_action_indicator_field"
		/>
		-->

		<field type="vertical_spacer" />

		<!-- Step 2A -->
		<field
			type="vertical_spacer"
			font_size_increment="0"
		>
			Step 2.A:  Auto-Detect Results List settings
		</field>
		<field
			name="search_term_good"
			label="Enter a search that will return results"
			default="the"
			is_special="TRUE"
		/>
		<field
			name="search_term_bad"
			label="Enter a search that WON'T return any results"
			default="xyzxyzxyz"
			is_special="TRUE"
		/>

		<!--
		<field type="vertical_spacer" />
		-->

		<field
			type="inline_button"
			label="Run searches and analyze results"
			click_event_class="RunTestSearches"
		>
			Run Test Searches
		</field>

		<!--
		<field type="vertical_spacer" />
		-->

		<!--
		<field
			type="inline_button"
			label="Clear settings below and try again"
			click_event_class="ClearAndRetrySearches"
		>
			Clear and Try Again
		</field>
		-->

		<field type="vertical_spacer" />

		<!-- Step 2B -->
		<field
			type="vertical_spacer"
			font_size_increment="0"
		>
			Step 2.B:  Review and adjust Results List settings
		</field>

		<!--
		<field
			name="results_has_forms"
			label="Results List has mini search form(s)"
			type="select"
			default="TRUE"
			xpath="/nie_config/search_tuning/search_engine_info/results/forms/@enabled"
		>
			<option>TRUE</option>
			<option>FALSE</option>
		</field>
		-->

		<field
			name="results_forms_tweak_policy"
			label="Send mini search forms through SearchTrack"
			type="select"
			default="That are using the same search URL (form's action)"
			xpath="/nie_config/search_tuning/search_engine_info/results/forms/tweak_policy"
		>
			<option value="0">FALSE</option>
			<option value="1">That are using the same search URL (form's action)</option>
			<option value="2">Any form found in the results</option>
			<option value="3">Only forms using a specific URL (form's action)</option>
			<option value="4">Except forms using a specific URL (form's action)</option>
			<option value="5">That match a URL pattern (regex)</option>
			<option value="6">Only specifically named forms (the name attr)</option>
			<option value="7">Except specifically named forms</option>
			<option value="8">Only specifically numbered forms (pos. on page)</option>
			<option value="9">Except specifically numbered forms</option>
			<option value="10">Only specific CSS class forms</option>
			<option value="11">Except specific CSS class forms</option>

			<option value="10">Only After a literal marker</option>
			<option value="11">Only Before a literal marker</option>
			<option value="12">Only Between literal markers</option>
			<!--
			<option value="13">Only OUTSIDE of literal markers</option>
			-->
		</field>
		<field
			name="results_forms_to_tweak_1"
			label="Optional pattern, names, numbers, etc."
			xpath="/nie_config/search_tuning/search_engine_info/results/forms/to_tweak_a"
		/>
		<field
			name="results_forms_to_tweak_2"
			label="Optional end pattern, etc."
			xpath="/nie_config/search_tuning/search_engine_info/results/forms/to_tweak_b"
		/>

		<field type="vertical_spacer" />

		<field
			name="results_doc_links_policy"
			label="Track document Click-Throughs"
			type="select"
			default="Any link found in the results"
			xpath="/nie_config/search_tuning/search_engine_info/results/doc_links/policy"
		>
			<option value="0">FALSE</option>
			<option value="1">That are using the same search URL</option>
			<option value="2">Any link found in the results</option>
			<option value="3">Only links starting with a specific URL</option>
			<option value="4">Except links starting with a specific URL</option>
			<option value="5">That match a URL pattern (regex)</option>
			<option value="6">Only specifically named links (the name attr)</option>
			<option value="7">Except specifically named links</option>
			<option value="8">Only specifically numbered links (pos. on page)</option>
			<option value="9">Except specifically numbered links</option>
			<option value="10">Only specific CSS class links</option>
			<option value="11">Except specific CSS class links</option>
			<option value="10">Only After a literal marker</option>
			<option value="11">Only Before a literal marker</option>
			<option value="12">Only Between literal markers</option>
			<!--
			<option value="13">Only OUTSIDE of literal markers</option>
			-->
		</field>
		<field
			name="results_doc_links_to_tweak_1"
			label="Optional pattern, names, numbers, etc."
			xpath="/nie_config/search_tuning/search_engine_info/results/doc_links/to_tweak_a"
		/>
		<field
			name="results_doc_links_to_tweak_2"
			label="Optional end pattern, etc."
			xpath="/nie_config/search_tuning/search_engine_info/results/doc_links/to_tweak_b"
		/>
		<field
			name="results_doc_links_cgi_field_1"
			label="Document link CGI field (if applicable)"
			xpath="/nie_config/search_tuning/search_engine_info/results/doc_links/cgi_field"
		/>
		<field
			name="results_doc_links_cgi_field_2"
			label="Second-level CGI field (very advanced)"
			xpath="/nie_config/search_tuning/search_engine_info/results/doc_links/cgi_field"
		/>

		<field
			name="results_doc_links_javascript_policy"
			label="JavaScript onClick vs. standard href"
			type="select"
			default="Remove onClick (if present)"
			xpath="/nie_config/search_tuning/search_engine_info/results/doc_links/js_policy"
		>
			<option value="1">Remove onClick (if present)</option>
			<option value="2">Keep onClick and try to patch</option>
			<option value="3">Leave onClick as-is (breaks click-through)</option>
		</field>


		<field type="vertical_spacer" />
		<field
			type="vertical_spacer"
			font_size_increment="0"
		>
			Remember to review the other Search Engine releated tabs
		</field>
		<field
			type="vertical_spacer"
			font_size_increment="0"
		>
			including Hidden Fields, Sub-Site and Patterns
		</field>
		<!--
		<field
			type="vertical_spacer"
			font_size_increment="0"
		>
			* Search Form Hidden Fields
		</field>
		<field
			type="vertical_spacer"
			font_size_increment="0"
		>
			* Sub-Site Search (2 tabs)
		</field>
		<field
			type="vertical_spacer"
			font_size_increment="0"
		>
			* Patterns
		</field>
		-->
		<field type="vertical_spacer" />

	</section>

