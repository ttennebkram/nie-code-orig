	<!-- Lucene Search -->
	<!-- ============= -->
	<section
		title="Lucene (Optional - Beta)"
		level="2"
		_help="find_map_basic_info.html"
	>
		<!--
		<field type="vertical_spacer" />
		-->
		<field
			type="vertical_spacer"
		>
			(Optional) Activate Lucene Searches
		</field>

		<field type="vertical_spacer" />

		<field
			type="vertical_spacer"
			font_size_increment="0"
		>
			Only works against an existing / pre-built Lucene index
		</field>
		<field
			name="luc_index_path"
			label="Full Path to Existing Index"
			xpath="/nie_config/lucene_search/index_directory"
		/>

		<field type="vertical_spacer" />

		<field
			type="vertical_spacer"
			font_size_increment="0"
		>
			Check your Lucene index for field names
		</field>
		<field
			name="luc_content_field"
			label="Search Field(s) (CSV)"
			xpath="/nie_config/lucene_search/search_fields"
			default="content"
		/>
		<field
			name="luc_display_field"
			label="Display Field(s) (ordered CSV)"
			xpath="/nie_config/lucene_search/display_fields"
			default="title"
		/>

		<field type="vertical_spacer" />

		<field
			type="vertical_spacer"
			font_size_increment="0"
		>
			Query URL format = http://machine:port/lucene?q=xyz
		</field>

	</section>
